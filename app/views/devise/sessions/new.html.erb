<body>
  <section>
    <div class="wrapper main-wrapper">
      <main>
        <div class="signin-form">
          <div class="form-container"> <!-- フォーム部分　-->
            <div class="signin-title title">
              <h2>ログイン</h2>
            </div>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <% if notice %>
                <p class="error_field alert alert-danger" role="alert""><%= notice %></p>
              <% end %>
              <% if alert %>
                <p class="error_field alert alert-danger" role="alert""><%= alert %></p>
              <% end %>
              <div class="field">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
              </div>

              <div class="field">
                <%= f.label :password %><br />
                <%= f.password_field :password, autocomplete: "off" %>
              </div>

              <% if devise_mapping.rememberable? -%>
                <div class="field">
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
                </div>
              <% end -%>

              <div class="actions">
                <%= f.submit "ログイン" %>
              </div>
            <% end %>

            <%= render "devise/shared/links" %>
          </div>
        </div>
      </main>
    </div>
  </section>
</body>